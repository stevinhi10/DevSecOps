pipeline {
    agent {
        docker {
            image 'php:latest'
        }
    }
    tools {
        php 'PHP'
        checkmarx 'Checkmarx'
        sonarqube 'SonarQube'
        dependencyCheck 'Dependency-Check'
        zap 'ZAP'
    }
    environment {
        AWS_ACCESS_KEY_ID = "${aws_access_key_id}"
        AWS_SECRET_ACCESS_KEY = "${aws_secret_access_key}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'gitlab-creds', url: 'http://gitlab/gitlab-instance-***/enter-repo-name.git'
            }
        }
        stage('Install PHP dependencies') {
            steps {
                sh 'composer install'
            }
        }
        stage('Test') {
            steps {
                sh 'vendor/bin/phpunit'
                sh 'npm run dependency-check'
                sh 'npm run trufflehog'
                sh 'npm run checkmarx'
            }
        }
        stage('Security') {
            steps {
                sh 'composer audit'
                sh 'npm run security-scan'
                sh 'npm run vulnerability-scan'
                sh 'npm run penetration-test'
                withSonarQubeEnv('sonarqube') {
                    sh 'sonar-scanner'
                }
                sh 'zap-baseline.py -t http://localhost:3000'
            }
        }
        stage('Deploy') {
            steps {
                sh 'aws configure set region us-east-1'
                sh 'aws secretsmanager create-secret --name db_password --secret-string "mysecretpassword"'
                sh 'npm run deploy'
            }
        }
    }
}
