pipeline {
    agent {
        docker {
            image 'node:latest'
        }
    }
    environment {
        AWS_ACCESS_KEY_ID = "${aws_access_key_id}"
        AWS_SECRET_ACCESS_KEY = "${aws_secret_access_key}"
    }
    stages {
        stage('Build') {
            steps {
                checkout
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
                sh 'npm run dependency-check'
                sh 'npm run trufflehog'
                sh 'npm run checkmarx'
            }
        }
        stage('Security') {
            steps {
                sh 'npm audit'
                sh 'npm run security-scan'
                sh 'npm run vulnerability-scan'
                sh 'npm run penetration-test'
                sh 'sonar-scanner'
                sh 'zap-baseline.py -t http://localhost:3000'
            }
        }
        stage('Deploy') {
            steps {
                sh 'aws configure set region us-east-1'
                sh 'aws secretsmanager create-secret --name db_password --secret-string "mysecretpassword"'
                sh 'npm run deploy'
            }
        }
    }
}
