pipeline {
    agent {
        docker {
            image 'php:7.4'
        }
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'gitlab-creds', url: 'http://gitlab/gitlab-instance-***/enter-repo-name.git'
            }
        }
        stage('Install PHP dependencies') {
            steps {
                sh 'composer install'
            }
        }
        stage('Test') {
            steps {
                sh 'vendor/bin/phpunit'
            }
        }
        stage('Security Scan') {
            steps {
                sh 'npm install -g checkmarx'
                sh 'checkmarx scan -v -c /path/to/checkmarx/config.xml'
            }
        }
        stage('Deploy') {
            steps {
                sh 'aws configure set region us-east-1'
                sh 'aws secretsmanager create-secret --name db_password --secret-string "mysecretpassword"'
                sh 'npm run deploy'
            }
        }
    }
}
